@model BookTickets.Models.Person

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>
</head>
<body>
    <h2>Регистрация</h2>
    <div>
        @using (Html.BeginForm(new { @class = "form-horizontal" }))
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <div class="col-sm-offset-5 col-sm-3">
                    <p>Ваше имя: @Html.TextBoxFor(x => x.Name, new { @class = "form-control" }) </p>
                </div>
            </div>
    <div class="form-group">
        <div class="col-sm-offset-5 col-sm-3">
            <p>Ваш логин: @Html.TextBoxFor(x => x.LogName, new { @class = "form-control" }) </p>
        </div>
    </div>
            <div class="form-group">
                <div class="col-sm-offset-5 col-sm-3">
                    <p>Ваш email: @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-5 col-sm-3">
                    <p>Ваш телефон: @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-5 col-sm-3">
                    <p>Номер вашего паспорта: @Html.TextBoxFor(x => x.Passport, new { @class = "form-control" })</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-5 col-sm-3">
                    <p>Введите пароль: @Html.PasswordFor(x => x.Password, new { @class = "form-control" }) </p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-5 col-sm-3">
                    <input type="submit" value="Зарегестрироваться" />
                </div>
            </div>
        }
    </div>



</body>
</html>

<style>
    h2 {
        text-align: center;
    }
</style>
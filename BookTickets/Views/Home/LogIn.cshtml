@model BookTickets.Models.LogInPerson

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Authorization</title>
</head>
<body>
    <div>
        <h2>Войдите в свою учетную запись или зарегистрируйтесь</h2>
              @using (Html.BeginForm(new { @class = "form-horizontal" })) 
              {
                    @Html.ValidationSummary()
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-3">
                            <p>Ваш логин: @Html.TextBoxFor(x => x.LogName, new { @class = "form-control" }) </p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-3">
                            <p>Ваш пароль: @Html.PasswordFor(x => x.Password, new { @class = "form-control" })</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-2">
                            <input class="btn btn-default btnsubmit" type="submit" value="Войти" />
                            <input class="btn btn-default btncancel" type="button" value="Отменить" onclick="location.href='@Url.Action("Index", "Home")'">
                        </div>
                    </div>
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-3 reglink">
            @Html.ActionLink("Зарегистрироваться", "Registration")
        </div>
    </div>
              }
            

</div>
</body>
</html>
 

<style>
    h2 {
        text-align: center;
    }
    .btnsubmit{
        width:100px;
    }
    .btncancel{
        width:100px;
        margin-left: 20px;
    }
    .reglink{
        margin-top:10px;
    }
</style>